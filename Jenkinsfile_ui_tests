pipeline {
    agent any
    parameters {
        string(name: 'ENVIRONMENT', defaultValue: 'dev', description: 'Target environment for test execution')
    }
    triggers { 
        pollSCM('*/1 * * * *')
    }
    stages {
        stage('test') {
            steps {
                sh "Running UI tests on ${params.ENVIRONMENT} environment"
            }
        }
    }
}